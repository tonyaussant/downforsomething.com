// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Phase1 {
  id      String  @id @default(uuid())
  option  Int
  name    String
  img     String
  phase2  Phase2[]
}

model Phase2 {
  id        String    @id @default(uuid())
  option    Int
  name      String
  img       String
  phase1    Phase1    @relation(fields: [parentID], references: [id])
  parentID  String
  results   Results[]
}

model Results {
  id        String  @id @default(uuid())
  name      String
  url       String
  phase2    Phase2  @relation(fields: [parentID], references: [id])
  parentID  String
}

model Plans {
  planCode          String  @id
  option1Total      Int?
  option2Total      Int?
  option3Total      Int?
  option4Total      Int?
  option5Total      Int?
  choicesTotal      Int?
  choicesNeeded     Int?
  retryTotal        Int?
  randomTotal       Int? 
  tieBreakersTotal  Int? 
  tieBreakersNeeded Int?
  roomOpen          Boolean?
  randomGenerated   Boolean?
  users             Users[]
}

model Users {
  id              String  @id @default(uuid())
  name            String  
  phase1Done      Boolean @default(false)
  phase2Done      Boolean @default(false)
  tieBreakerDone  Boolean @default(false)
  plans           Plans?  @relation(fields: [planCode], references: [planCode])
  planCode        String?
}